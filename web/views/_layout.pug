doctype html
html(lang='en')
  head
    title #{ __('Peoplechain') }#{!title ? '' : ' -' + title }
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='og:title' content='Peoplechain')
    script(src='/js/northstar.js')
    script(src='/js/northstar-forms.js')
    script(src='/js/common.bundle.js')
    script(src='/socket.io/socket.io.js')
    link(rel='alternate', href='?applang=en', hreflang='en-us')
    link(rel='alternate', href='?applang=de', hreflang='de-de')
    include _favicon
    block header_exts
  body#ibm-com.ibm-type
    #ibm-content-wrapper
      header
        .ibm-sitenav-menu-container
          .ibm-sitenav-menu-name
            a(href='/') #{__('Peoplechain')}
          .ibm-sitenav-menu-list
            ul(role='menubar')
              li(role='presentation', class=(homeActive ? 'ibm-highlight' : ''))
                a(role='menuitem', href='/') #{ __('Home') }
              li.ibm-haschildlist(role='presentation', class=(shopActive ? 'ibm-highlight' : ''))
                span(role='menuitem') #{ __('Candidate') }
                ul(role='menu')
                  li(role='presentation', class=(bikesActive ? 'ibm-highlight' : ''))
                    a(role='menuitem', href='/shop/bikes') #{ __('Personal Details') }
                  li(role='presentation', class=(smartPhonesActive ? 'ibm-highlight' : ''))
                    a(role='menuitem', href='/shop/smart-phones') #{ __('Educational Details') }
                  li(role='presentation', class=(skisActive ? 'ibm-highlight' : ''))
                    a(role='menuitem', href='/shop/skis') #{ __('Skills') }
              li(role='presentation', class=(policeActive ? 'ibm-highlight' : ''))
                a(role='menuitem', href='/police') #{ __('Regulator') }
              li(role='presentation', class=(repairShopActive ? 'ibm-highlight' : ''))
                a(role='menuitem', href='/repair-shop') #{ __('Vocational Training Centre') }
              li.ibm-haschildlist(role='presentation', class=(insuranceActive ? 'ibm-highlight' : ''))
                span(role='menuitem') #{ __('Institute') }
                ul(role='menu')
                  li(role='presentation', class=(selfServiceActive ? 'ibm-highlight' : ''))
                    a(role='menuitem', href='/insurance/self-service') #{ __('Student Login') }
                  li(role='presentation', class=(claimProcessingActive ? 'ibm-highlight' : ''))
                    a(role='menuitem', href='/insurance/claim-processing') #{ __('Claim Processing') }
      main(role='main', aria-labelledby='ibm-pagetitle-h1')
        #ibm-pcon
          #ibm-content
            #ibm-content-body
              #ibm-content-main
                block content

    #block-explorer
    script(src='/js/block-explorer.bundle.js')
    // scripts section
    block scripts
